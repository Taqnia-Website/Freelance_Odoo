<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hotel_reservation_form1_hide_reservation_add_item" model="ir.ui.view">
            <field name="name">view_hotel_reservation_form1.hide.reservation.add.item</field>
            <field name="model">hotel.reservation</field>
            <field name="inherit_id" ref="hotel_management.view_hotel_reservation_form1"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reservation_line']/tree" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="delete">0</attribute>
                </xpath>
                <xpath expr="//field[@name='reservation_line']" position="attributes">
                    <attribute name="invisible">state != 'confirm'</attribute>
                </xpath>
                <xpath expr="//field[@name='reservation_line']" position="after">
                    <field name="reservation_line" readonly="state in ['done']" nolabel="1" colspan="4"
                                           context="{'shop_id':shop_id,'default_shop_id':shop_id}" invisible="state == 'confirm'">
                        <tree string="Reservation Line" >
                            <field name="categ_id"/>
                            <field name="line_id" invisible="1"/>
                            <field name="room_number"/>
                            <field name="checkin" readonly="0"/>
                            <field name="checkout"/>
                            <!-- <field name="shop_id"/> -->
                            <field name="discount"/>
                            <field name="price"/>
                            <field name="sub_total1"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>