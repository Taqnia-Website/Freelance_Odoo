<?xml version="1.0"?>
<odoo>
    <record id="sale_shop_tag_tree" model="ir.ui.view">
        <field name="name">sale.shop.tag.tree</field>
        <field name="model">sale.shop.tag</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="sale_shop_tag_action" model="ir.actions.act_window">
        <field name="name">Hotel Tags</field>
        <field name="res_model">sale.shop.tag</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>