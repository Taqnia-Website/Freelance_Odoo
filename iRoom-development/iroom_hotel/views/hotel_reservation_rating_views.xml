<?xml version="1.0"?>
<odoo>
    <record id="hotel_reservation_rating_tree" model="ir.ui.view">
        <field name="name">hotel.reservation.rating.tree</field>
        <field name="model">hotel.reservation.rating</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reservation_id"/>
                <field name="shop_id"/>
                <field name="partner_id"/>
                <field name="name" optional="hide"/>
                <field name="email" optional="hide"/>
                <field name="cleanliness"/>
                <field name="comfort"/>
                <field name="staff"/>
                <field name="facilities_and_services"/>
                <field name="total_rate"/>
            </tree>
        </field>
    </record>

    <record id="hotel_reservation_rating_form" model="ir.ui.view">
        <field name="name">hotel.reservation.rating.form</field>
        <field name="model">hotel.reservation.rating</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="reservation_id"/>
                            <field name="shop_id"/>
                            <field name="partner_id"/>
                            <field name="name"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="cleanliness"/>
                            <field name="comfort"/>
                            <field name="staff"/>
                            <field name="facilities_and_services"/>
                            <field name="total_rate"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hotel_reservation_rating_action" model="ir.actions.act_window">
        <field name="name">Reservation Ratings</field>
        <field name="res_model">hotel.reservation.rating</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hotel_reservation_rating_menu"
              parent="hotel_management.main_menu_hotel_reservation_tree_all"
              action="hotel_reservation_rating_action"
              sequence="25"/>
</odoo>