<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']" position="after">
                <page name="reservation" string="Reservation">
                    <group>
                        <group>
                            <field name="product_room_id" readonly="state == 'sale'"/>
                            <field name="reservation_from" string="From" readonly="state == 'sale'"/>
                            <field name="reservation_to" string="To" readonly="state == 'sale'"/>
                        </group>
                        <group>
                            <field name="number_of_adults" readonly="state == 'sale'"/>
                            <field name="number_of_children" readonly="state == 'sale'"/>
                            <field name="reservation_id" readonly="1" invisible="reservation_id == False"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>