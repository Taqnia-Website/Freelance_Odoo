<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="NotificationAlertInherit" t-inherit="web.NotificationAlert" t-inherit-mode="extension" owl="1">
        <xpath expr="//div" position="replace">
            <div t-if="messaging and messaging.isNotificationBlocked" class="o_NotificationAlert alert alert-primary d-flex justify-content-center" t-attf-class="{{ className }}" t-ref="root">
            iRoom Push notifications have been blocked. Go to your browser settings to allow them.
        </div>
        </xpath>
    </t>
</templates>
