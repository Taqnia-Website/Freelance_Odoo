<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="digest_mail_main_inherit" inherit_id="digest.digest_mail_main">
        <xpath expr="//div[hasclass('by_odoo')]" position="replace">
        	<div class="by_odoo">
                <t t-if="unsubscribe_token">
                    <a t-attf-href="/digest/#{object.id}/unsubscribe?token=#{unsubscribe_token}&amp;user_id=#{user.id}"
                       target="_blank" style="text-decoration: none;">
                        <span style="color: #8f8f8f;">Unsubscribe</span>
                    </a>
                </t>
                <t t-elif="object and object._name == 'digest.digest'">
                    <a t-att-href="'/web#view_type=form&amp;model=digest.digest&amp;id=%s' % object.id"
                       target="_blank" style="text-decoration: none;">
                        <span style="color: #8f8f8f;">Unsubscribe</span>
                    </a>
                </t>
            </div>
        </xpath>
        <xpath expr="//p[hasclass('by_odoo')]" position="replace">
        	<p class="by_odoo" id="powered">
		        Powered by <a target="_blank" t-att-href="company.website" style="color: #875A7B;">
		        <span class="odoo_link_text"><t t-out="'%s' % company.name"/></span></a>
		    </p>
        </xpath>
    </template>
	<template id="digest_section_mobileinherit" inherit_id="digest.digest_section_mobile">
		<xpath expr="//td[@colspan='3']" position="replace">
		</xpath>
	</template>
</odoo>