    <record id="agent_group_rule" model="ir.rule">
        <field name="name">Agent Rule</field>
        <field name="model_id" ref="model_hotel_reservation"/>
<!--         <field name="domain_force">['|',('create_uid','=',user.id), ('partner_id', '=', user.partner_id.id)]</field>-->
         <field name="domain_force">[
             '|',
             '&amp;', ('create_uid','=',user.id), ('state', 'not in', ['cancel']),
             '&amp;', ('partner_id', '=', user.partner_id.id), ('state', 'not in', ['draft', 'cancel'])
             ]
         </field>
        <field name="groups" eval="[(4, ref('group_agent'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_create" eval="0"/>
    </record>
