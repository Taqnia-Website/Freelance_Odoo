<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ntmp_view_hotel_reservation_form1" model="ir.ui.view">
            <field name="name">ntmp_view_hotel_reservation_form1</field>
            <field name="model">hotel.reservation</field>
            <field name="inherit_id" ref="hotel_management.view_hotel_reservation_form1"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="ntmp" string="NTMP" invisible="not apply_ntmp">
                        <group>
                            <group>
                                <field name="apply_ntmp"/>
                                <field name="nationality_id"/>
                                <field name="gender_id"/>
                            </group>
                            <group>
                                <field name="customer_type_id"/>
                                <field name="visit_purpose_id"/>
                                <field name="payment_type_id"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='reservation_line']/tree" position="inside">
                    <field name="rent_type_id" optional="show"/>
                    <field name="ntmp_room_type_id" optional="show"/>
                    <field name="message" optional="show"/>
                    <field name="ntmp_transaction_id" optional="show"/>
                    <field name="ntmp_msg_transaction_id" optional="show"/>
                </xpath>
            </field>
        </record>
        <record id="ntmp_view_hotel_reservation_line_from" model="ir.ui.view">
            <field name="name">ntmp_view_hotel_reservation_line_from</field>
            <field name="model">hotel.reservation.line</field>
            <field name="inherit_id" ref="hotel_management.view_hotel_reservation_line_from"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <separator string="NTMP"/>
                    <group colspan="4" invisible="not line_id.apply_ntmp">
                        <field name="line_id" invisible="1"/>
                        <field name="rent_type_id"/>
                        <field name="ntmp_room_type_id"/>
                        <field name="message"/>
                        <field name="ntmp_transaction_id"/>
                        <field name="ntmp_msg_transaction_id"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>