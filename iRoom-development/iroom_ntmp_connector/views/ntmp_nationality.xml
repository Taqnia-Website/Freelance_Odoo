<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ntmp_nationality_view_tree" model="ir.ui.view">
            <field name="name">ntmp_nationality_view_tree</field>
            <field name="model">ntmp.nationality</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="arabic_title"/>
                    <field name="english_title"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record id="ntmp_nationality_view_search" model="ir.ui.view">
            <field name="name">ntmp_nationality_view_search</field>
            <field name="model">ntmp.nationality</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code" string="Code/Arabic/English Title" filter_domain="['|', '|', ('code', 'ilike', self), ('arabic_title', 'ilike', self), ('english_title', 'ilike', self)]"/>
                </search>
            </field>
        </record>
        <record id="ntmp_nationality_action" model="ir.actions.act_window">
            <field name="name">Nationalities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ntmp.nationality</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="ntmp_nationality_view_search"/>
        </record>
        <menuitem id="ntmp_nationality_menu" name="Nationalities"
                  parent="ntmp_root_menu" action="ntmp_nationality_action" sequence="8"/>
    </data>
</odoo>