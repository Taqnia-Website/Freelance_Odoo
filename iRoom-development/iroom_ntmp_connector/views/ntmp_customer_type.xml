<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ntmp_customer_type_view_tree" model="ir.ui.view">
            <field name="name">ntmp_customer_type_view_tree</field>
            <field name="model">ntmp.customer.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="name_en"/>
                </tree>
            </field>
        </record>
        <record id="ntmp_customer_type_action" model="ir.actions.act_window">
            <field name="name">Customer Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ntmp.customer.type</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem id="ntmp_customer_type_view_menu" name="Customer Types"
                  parent="ntmp_root_menu" action="ntmp_customer_type_action" sequence="4"/>
    </data>
</odoo>