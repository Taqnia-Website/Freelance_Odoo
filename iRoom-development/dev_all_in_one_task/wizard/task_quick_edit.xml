<odoo>
     <record id="task_quick_edit_view" model="ir.ui.view">
            <field name="name">Task</field>
            <field name="model">task.quick.edit</field>
            <field name="arch" type="xml">
                <form string="Task">
                   <div class="oe_title">
                         <label for="name" class="oe_edit_only" string="Task"/>
                          <h1><field name="name"/></h1>
                    </div>
                     <group>  
                        <group>
                             <field name="user_ids" widget="many2many_tags"/>
                              <field name="tag_ids" widget="many2many_tags"/>
                         </group> 
                         <group>
                             <field name="date_deadline"  />
                        </group>
                    </group>
                    <footer>
                           <button name="confirm_task" string="Confirm" class="oe_highlight"  type="object"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/> 
                   </footer>
                </form>
            </field>
     </record>
    <record id="action_task_quick_edit" model="ir.actions.act_window">
        <field name="name">Task Quick Edit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">task.quick.edit</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
