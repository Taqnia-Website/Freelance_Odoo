<odoo>
<record id="dev_task_from_lead" model="ir.ui.view">
        <field name="name">dev.task.from.lead</field>
        <field name="model">task.lead</field>
        <field name="arch" type="xml">
           <form>
             <group>
             	<group>
             		<field name='project_id'/>
             		<field name='name'/>
             	</group>
             	<group>
             		<field name='dedline_date'/>
             		<field name='assigned_to'/>
             	</group>
             </group> 
           <footer>
               <button string="Create Task" name="update_values" type="object" class="oe_highlight"/>
               <button string="Close Window" class="oe_link" special="cancel"/>
           </footer>
           </form>
        </field>
</record>

<record id="action_task_from_lead" model="ir.actions.act_window">
        <field name="name">Create Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">task.lead</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="dev_task_from_lead"/>
        <field name="target">new</field>
</record>
</odoo>  
