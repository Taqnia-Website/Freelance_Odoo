<odoo>
	<record id="wizard_update_task" model="ir.ui.view">
        <field name="name">wizard.update.task</field>
        <field name="model">update.project</field>
        <field name="arch" type="xml">
            <form string="Update Mass Task">
                <group>
                    <group>
                        <field name='select_id' />
                    </group>
                    <group>
                        <field name="user_ids"  widget="many2many_tags" invisible = "select_id != 'users_id'"/>
						<field name="date_deadline" invisible = "select_id !=  'date' "/>
						<field name="tag_ids" widget="many2many_tags" invisible = "select_id != 'tags_ids'"/>
						<field name="stage_id" invisible = "select_id != 'stage_id'"/>
					</group>
                </group>
                <footer>
                    <button string="Update Values" name="update_values" type="object" class="oe_highlight"/>
                    <button string="Close Window" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="update_task_wizard" model="ir.actions.act_window">
        <field name="name">Update Mass Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.project</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="project.model_project_task"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
