	<record id="view_task_template_tree" model="ir.ui.view">
		<field name="name">view.task.template.tree</field>
		<field name="model">task.template</field>
		<field name="arch" type="xml">
		    <tree string="Tasks">
                    <field name="name"/>
                    <field name="project_id" column_invisible="1"/>
                    <field name="user_ids" optional="show" widget="many2many_avatar_user"/>
                    <field name="is_template_task"/>
                </tree>
		</field>
	</record>

	<!--Task Note Action-->
	<record id="action_task_template" model="ir.actions.act_window">
        <field name="name">Task Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">task.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Task Note Menus-->
 	<menuitem name ="Task Template" id='menu_task_template' parent="project.menu_project_config" action="action_task_template" sequence="1"/>
</odoo>

