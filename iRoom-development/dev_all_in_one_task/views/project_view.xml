<!-- Form View -->
<odoo>
    <record id="project_sequnce_inherited" model="ir.ui.view">
        <field name="name">sequnce.project.inherited</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//widget[@name='web_ribbon']" position="before">
                <h3>
                    <field name="project_seq"/>
                </h3>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="project_priority" widget="priority"/>
            </xpath>
              <xpath expr="//notebook" position="inside">
                <page string="Automatic User Assignment">
                    <field name="task_user_assign_ids">
                        <tree editable="bottom">
                            <field name="stage_id"/>
                            <field name="user_id"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="stage_id"/>
                                </group>
                                <group>
                                    <field name="user_id"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    
     <record id="project_inherited_simplified_from_view" model="ir.ui.view">
	 <field name="name">project.inherited.simplified.from.view</field>
	 <field name="model">project.project</field>
	 <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
	 <field name="arch" type="xml">
		 <xpath expr="//div[@name='alias_def']" position="after">
		  <label for="show_template_tasks" string="Display Tasks"/>
            <field name="show_template_tasks"/>
		 </xpath>
	</field>
 </record>
 <!-- Tree View  -->

    <record id="project_list_inherited" model="ir.ui.view">
        <field name="name">sequnce.project.tree.inherited</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="before">
                    <field name="project_seq"/>
            </xpath>
        </field>
    </record>

    <!-- Search View  -->

    <record id="project_search_inherited" model="ir.ui.view">
        <field name="name">project.search.inherited</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_project_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search//field[@name='name']" position="before">
                <field name="project_seq"/>
            </xpath>
        </field>
    </record>

    <!--Kanban View   -->

    <record id="project_kanban_inherited" model="ir.ui.view">
        <field name="name">kanban.project.inherited</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_kanban_record_bottom mt-3']" position="after">
                <div class="oe_row" style="margin-top: 5px;">
                    <h5>
                        <field name="project_seq"/>
                    </h5>
                </div>
            </xpath>
            <xpath expr="//div[@class='o_kanban_card_content mw-100']//div[1]//div[1]" position="inside">
                <br/><field name="project_priority" widget="priority"/>
            </xpath>
        </field>
    </record>
</odoo>
