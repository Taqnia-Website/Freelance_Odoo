<odoo>
<record id="dev_create_task_lead" model="ir.ui.view">
	<field name="name">dev.create.task.lead</field>
	<field name="model">crm.lead</field>
	<field name="inherit_id" ref="crm.crm_lead_view_form"/>
	<field name="arch" type="xml">
    	<xpath expr="//header" position="inside">
		   <button name="%(action_task_from_lead)d" type='action' string='Create Task' class='btn-primary' context="{'default_name': name,  'default_assigned_to': user_id}"/>
    	</xpath>
    	
    	<xpath expr="//sheet//div[@class='oe_button_box']" position="inside">
    	     <button type="object" name="view_task" String='Task' icon="fa-paperclip ">
				 <span>Task</span>
				 <field name='task_count'/>
		     </button>
    	</xpath>
    	
	</field>
</record>
</odoo> 
	 
	 
	 
	             
