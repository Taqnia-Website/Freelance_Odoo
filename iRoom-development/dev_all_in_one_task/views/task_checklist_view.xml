<odoo>
    <!--tree-->
	<record id="tree_task_checklists" model="ir.ui.view">
		<field name="name">tree.task.checklists</field>
		<field name="model">task.checklist</field>
		<field name="arch" type="xml">
		    <tree string="Task Checklist Tree" editable="bottom">
                <field name="name"/>
                <field name="description"/>
                <field name="stage_id"/>
 		    </tree>
		</field>
	</record>

    <!--Action-->
	<record id="action_task_checklists" model="ir.actions.act_window">
        <field name="name">Task Checklist</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">task.checklist</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="tree_task_checklists"/>
    </record>

    <!--Menu-->
 	<menuitem name="Task Checklist"
              id='menu_task_checklists'
              parent="project.menu_project_config"
              action="action_task_checklists"
              sequence="3"/>
</odoo>