<odoo>
    <record id="paperformat_task_report" model="report.paperformat">
        <field name="name">Task Report</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="project_task_report_menu_id" model="ir.actions.report">
        <field name="name">Project Task</field>
        <field name="model">project.task</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dev_all_in_one_task.template_task_report</field>
        <field name="report_file">dev_all_in_one_task.template_task_report</field>
        <field name="binding_model_id" ref="project.model_project_task"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_task_report"/>
    </record>
</odoo>
