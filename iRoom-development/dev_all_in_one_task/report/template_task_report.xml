<odoo>
    <template id="project_task_report_id">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:13px">

                    <div class="row" style="margin-bottom:20px;">
                        <div class="col-6" style="font-size:13px;margin-top:10px;">
                            <t t-if="o.partner_id">
                                <b>
                                    <t t-esc="o.partner_id.name"/>
                                </b>
                                <br/>
                            </t>
                            <t t-if="o.partner_id.street">
                                <t t-esc="o.partner_id.street"/>,
                                <br/>
                            </t>
                            <t t-if="o.partner_id.state_id">
                                <t t-esc="o.partner_id.state_id.name"/>
                            </t>
                            <t t-if="o.partner_id.zip">
                                <t t-esc="o.partner_id.zip"/>
                                <br/>
                            </t>
                            <t t-if="o.partner_id.country_id">
                                <t t-esc="o.partner_id.country_id.name"/>
                            </t>
                        </div>
                        <div class="col-6" style="font-size:13px;margin-top:10px;">
                            <table style="border-style:none;" width="100%">
                                <tr>
                                    <td style="width: 25%">
                                        <b>Assigned To </b>
                                    <td style="width: 4%"><b>:</b></td>
                                    </td>
                                    <td style="width: 70%">
<!--                                        <t t-esc="o.user_ids.name"/>-->
                                       <t t-esc="', '.join(map(lambda x: x.name, o.user_ids))" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Assigned Date </b>
                                    </td>
                                    <td style="width: 4%"><b>:</b></td>
                                    <td>
                                        <span t-field="o.date_assign" t-options="{&quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Deadline </b>
                                    </td>
                                    <td style="width: 4%"><b>:</b></td>
                                    <td>
                                        <span t-field="o.date_deadline" t-options="{&quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <h3>
                        <t t-esc="o.name"/>
                    </h3>

                    <table class="table" style="font-size:13px;border-collapse:collapse;margin-top:20px;" width="100%">
                        <thead>
                            <tr>
                                <th style="border-top:1px solid black;border-bottom:1px solid black;text-align:left" width="20%">
                                    <strong>Date</strong>
                                </th>
                                <th style="border-top:1px solid black;border-bottom:1px solid black;text-align:left" width="20%" >
                                    <strong>User</strong>
                                </th>
                                <th style="border-top:1px solid black;border-bottom:1px solid black;text-align:left" width="70%" >
                                    <strong>Description</strong>
                                </th>
                                <th style="border-top:1px solid black;border-bottom:1px solid black;text-align:right" width="10%">
                                    <strong>Duration</strong>
                                </th>
                            </tr>
                        </thead>
                        <tr t-foreach="o.timesheet_ids" t-as="l">
                            <td style="text-align:left;">
                                <span t-field="l.date" t-options="{&quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/>
                            </td>
                            <td style="text-align:left;">
                                <span t-field="l.user_id.name"/>
                            </td>
                            <td style="text-align:left;">
                                <span t-field="l.name"/>
                            </td>
                            <td style="text-align:right">
                                <span t-field="l.unit_amount"/>
                            </td>
                        </tr>
                    </table>

                    <div class="co-12" style="font-size:12px;margin-top:40px;">
                     <div class="row">
                        <div class="col-7">
                        </div>
                        <div class="col-6 pull-right">
                            <div class="col-8 pull-right">
                                <table width="100%" class="pull-right">
                                    <tr>
                                        <td width="70%">
                                            <b>Initially Planned Hours :</b>
                                        </td>
                                        <td width="30%">
                                            <span t-field="o.allocated_hours"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>
                                                <b>Effective Hours :</b>
                                            </b>
                                        </td>
                                        <td>
                                            <span t-field="o.effective_hours"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Remaining Hours :</b>
                                        </td>
                                        <td>
                                            <span t-field="o.remaining_hours"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    </div>
                    <div class="col-12" style="font-size:12px;margin-top:10px;">
                        <div class="col-5 pull-left">
                            <div class="col-5 pull-left" style="border-top:1px solid black;text-align:center">
                                <b>Signature</b>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="template_task_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="dev_all_in_one_task.project_task_report_id"/>
            </t>
        </t>
    </template>
</odoo>
