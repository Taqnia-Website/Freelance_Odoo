<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="iroom_website.hotel_booking_component">
        <div class="booking-modal-wrap">
			<div class="booking-modal-container">
				<div class="booking-modal-content fl-wrap">
					<div class="booking-modal-info">
						<div class="booking-modal-close color-bg">
							<i class="fa fa-times" aria-hidden="true">
							</i>
						</div>
						<div class="bg" data-bg="https://hotels.iroom.ai/web/image/4529">
						</div>
						<div class="overlay">
						</div>
						<div class="booking-modal-info_content fl-wrap">
							<h4>
								فندق هوليدي العزيزية
							</h4>
							<ul>
								<li>
									تاريخ الحجز :
									<span>
										05.05.2020
									</span>
								</li>
								<li>
									عدد الأشخاص :
									<span>
										2
									</span>
								</li>
								<li>
									السعر :
									<span>
										$120
									</span>
								</li>
							</ul>
						</div>
					</div>
					<div class="bookiing-form-wrap">
						<ul id="progressbar">
							<li class="active">
								<span>
									01.
								</span>
								المعلومات الشخصية
							</li>
							<li>
								<span>
									02.
								</span>
								العنوان
							</li>
							<li>
								<span>
									03.
								</span>
								طريقة الدفع
							</li>
							<li>
								<span>
									04.
								</span>
								تأكيد
							</li>
						</ul>
						<!-- list-single-main-item -->
						<div class="list-single-main-item fl-wrap hidden-section tr-sec">
							<div class="profile-edit-container">
								<div class="custom-form">
									<form id="hotel-signup">
										<fieldset class="fl-wrap book_mdf">
											<div class="list-single-main-item-title fl-wrap">
												<h3>
													معلوماتك الشخصية
												</h3>
											</div>
											<div class="row">
												<div class="col-sm-6">
													<label>
														الإسم
														<i class="far fa-user">
														</i>
													</label>
													<input id="signup-first-name" type="text" placeholder="الإسم" value=""/>
												</div>
												<div class="col-sm-6">
													<label>
														اللقب
														<i class="far fa-user">
														</i>
													</label>
													<input id="signup-last-name" type="text" placeholder="اللقب" value="" />
												</div>
											</div>
											<div class="row">
												<div class="col-sm-6">
													<label>
														عنوان البريد الإلكتروني
														<i class="far fa-envelope">
														</i>
													</label>
													<input id="signup-email" type="text" placeholder="yourmail@domain.com" value=""/>
												</div>
												<div class="col-sm-6">
													<label>
														رقم الهاتف
														<i class="far fa-phone">
														</i>
													</label>
													<input id="signup-mobile" type="text" placeholder="87945612233" value=""/>
												</div>
												<div class="col-sm-6">
													<label>
														الرقم السري
														<i class="far fa-user">
														</i>
													</label>
													<input id="signup-password" type="password" value=""/>
												</div>
											</div>
											<div id="signup-error" sytle="color:red"/>
											<div class="log-massage">
												عميل مسجل ؟
												<a href="#" class="modal-open">
													إضغط هنا لتسجيل الدخول
												</a>
											</div>
											<div class="log-separator fl-wrap">
												<span>
													أو
												</span>
											</div>
											<div class="soc-log fl-wrap">
												<p>
													لتسجيل الدخول أو التسجيل بشكل أسرع.
												</p>
												<a href="#" class="facebook-log">
													<i class="fab fa-facebook-f">
													</i>
													تسجيل الدخول عبر الفيسبوك
												</a>
											</div>
											<div class="filter-tags">
												<input id="signup-conditions" type="checkbox" name="check" />
												<label for="signup-conditions">
													من خلال المتابعة، فإنك توافق على
													<a href="#" target="_blank">
														الشروط والأحكام
													</a>
													.
												</label>
											</div>
											<span class="fw-separator">
											</span>
											<a href="#" class="next-form text-white action-button btn no-shdow-btn color-bg">
												العنوان
												<i class="fal fa-angle-left">
												</i>
											</a>
										</fieldset>
										<fieldset class="fl-wrap book_mdf">
											<div class="list-single-main-item-title fl-wrap">
												<h3>
													العنوان
												</h3>
											</div>
											<div class="row">
												<div class="col-sm-6">
													<label>البلد</label>
													<div class="listsearch-input-item ">
														<select id="signup-country" data-placeholder="البلد" class="chosen-select no-search-select">
															<option/>
															<t t-foreach="countries" t-as="country">
																<option t-att-value="country['id']" t-esc="country['name']"/>
															</t>
														</select>
													</div>
												</div>
												<div class="col-sm-6">
													<label>المدينة <i class="fal fa-globe-asia"/></label>
													<div class="listsearch-input-item ">
														<select id="signup-state" data-placeholder="المدينة" class="chosen-select no-search-select"/>
													</div>
<!--													<input type="text" placeholder="المدينة" value="" />-->
												</div>
											</div>
											<div class="row">
												<div class="col-sm-12">
													<label>
														الحي
														<i class="fal fa-road">
														</i>
													</label>
													<input id="signup-city" type="text" placeholder="الحي" value="" />
												</div>
											</div>
											<div class="row">
												<div class="col-sm-8">
													<label>
														المنطقة
														<i class="fal fa-street-view">
														</i>
													</label>
													<input id="signup-region" type="text" placeholder="المنطقة" value="" />
												</div>
												<div class="col-sm-4">
													<label>
														الرمز بريدي
														<i class="fal fa-barcode">
														</i>
													</label>
													<input id="signup-zipCode" type="text" placeholder="123456" value="" />
												</div>
											</div>
											<div class="list-single-main-item-title fl-wrap">
												<h3>
													ملاحظات إضافية
												</h3>
											</div>
											<textarea id="signup-notes" cols="40" rows="3" placeholder="Notes">
											</textarea>
											<span class="fw-separator">
											</span>
											<a href="#" class="previous-form action-button back-form text-white color-bg">
												<i class="fal fa-angle-right">
												</i>
												العودة
											</a>
											<a href="#" class="next-form text-white back-form text-white action-button btn no-shdow-btn color-bg">
												طريقة الدفع
												<i class="fal fa-angle-left">
												</i>
											</a>
										</fieldset>
										<fieldset class="fl-wrap book_mdf">
											<div class="list-single-main-item-title fl-wrap">
												<h3>
													طريقة الدفع
												</h3>
											</div>
											<div class="row">
												<div class="col-sm-6">
													<label>
														اسم حامل البطاقة
														<i class="far fa-user">
														</i>
													</label>
													<input id="signup-card-owner" type="text" placeholder="" value="Adam Kowalsky" />
												</div>
												<div class="col-sm-6">
													<label>
														رقم البطاقة
														<i class="fal fa-credit-card-front">
														</i>
													</label>
													<input id="signup-card-number" type="text" placeholder="xxxx-xxxx-xxxx-xxxx" value="" />
												</div>
											</div>
											<div class="row">
												<div class="col-sm-3">
													<label>
														شهر انتهاء الصلاحية
														<i class="fal fa-calendar">
														</i>
													</label>
													<input id="signup-card-month" type="text" placeholder="MM" value="" />
												</div>
												<div class="col-sm-3">
													<label>
														سنة انتهاء الصلاحية
														<i class="fal fa-calendar">
														</i>
													</label>
													<input id="signup-card-year" type="text" placeholder="YY" value="" />
												</div>
												<div class="col-sm-2">
													<label>
														CVV / CVC *
														<i class="fal fa-credit-card">
														</i>
													</label>
													<input id="signup-cvv-cvc" type="password" placeholder="***" value="" />
												</div>
												<div class="col-sm-4">
													<p style="padding-top:20px;">
														*رقم مكون من ثلاثة أرقام على ظهر
														بطاقتك
													</p>
												</div>
											</div>
											<div class="log-separator fl-wrap">
												<span>
													أو
												</span>
											</div>
											<div class="soc-log fl-wrap">
												<p>
													إختر طريقة دفع اخرى
												</p>
												<a href="#" class="paypal-log">
													<i class="fab fa-paypal">
													</i>
													ادفع باستخدام
													باي بال
												</a>
											</div>
											<span class="fw-separator">
											</span>
											<a href="#" class="previous-form  back-form action-button text-white color-bg">
												<i class="fal fa-angle-right">
												</i>
												العودة
											</a>
											<button class="btn color-bg text-white no-shdow-btn" id="create-reservation-btn" style="float: left;">
												تأكيد الدفع
											</button>
											<a href="#" class="next-form d-none text-white action-button btn color2-bg no-shdow-btn" id="go-to-invoice-a">
												تأكيد الدفع
												<i class="fal fa-angle-left">
												</i>
											</a>
										</fieldset>
										<fieldset class="fl-wrap book_mdf">
											<div class="list-single-main-item-title fl-wrap">
												<h3>
													التأكيد
												</h3>
											</div>
											<div class="success-table-container">
												<div class="success-table-header fl-wrap">
													<i class="fal fa-check-circle decsth">
													</i>
													<h4>
														شكرًا لك. لقد تم تأكيد الحجز .
													</h4>
													<div class="clearfix">
													</div>
													<p>
														تم الدفع بنجاح
													</p>
													<br>
														<a href="invoice.html" target="_blank" class="color-bg">
															الإطلاع على الفاتورة
														</a>
													</br>
												</div>
												<span class="fw-separator">
												</span>
												<a href="#" class="previous-form action-button back-form text-white color-bg">
													<i class="fal fa-angle-right">
													</i>
													العودة
												</a>
											</div>
										</fieldset>
									</form>
								</div>
							</div>
							<!-- list-single-main-item end -->
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="bmw-overlay">
		</div>
    </template>
</odoo>