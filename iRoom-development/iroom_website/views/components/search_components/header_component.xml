<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="iroom_website.search_header_component">
		<style>
			#hotel_select{
			appearance: none;
			-webkit-appearance: none;
			-moz-appearance: none;
			border: none;
			width: 100%;
			height: 100%;
			text-align: center;
			border: 1px solid #eee;
			padding: 12px 33px 12px 32px;
			border-radius: 6px;
			background: #F7F9FB;
			height: 42px;
			}
			#hotel_select::after {
			content: "\f0d9";
			font-family: FontAwesome;
			position: absolute;
			right: 10px;
			top: 50%;
			transform: translateY(-50%);
			pointer-events: none;
			}
			.select-i{
			position: absolute;
			font-size: 13px;
			font-weight: 800;
			transition: all .2s ease-in-out;
			z-index: 25;
			left: 10px;
			top: 66%;
			transform: translateY(-50%);
			pointer-events: none;
			color: #3aaced !important;
			}
			.col-list-search-input-item.in-loc-dec:before{
			content:none;
			}
			.sale-window:before,
			.sale-window:after {
			content: '';
			position: absolute;
			width: 0;
			height: 0;
			left: 0;
			}

			.sale-window:after {
			border-bottom: 14px solid #3AACED !important;
			border-left: 16px solid transparent;
			margin-left: -16px;
			margin-top: 9px;
			}

			.sale-window:before {
			border-top: 14px solid #3AACED !important;
			border-left: 16px solid transparent;
			margin-left: -16px;
			margin-top: -6px;
			}
			.sale-window {
			position: absolute;
			left: 20px;
			top: 20px;
			background: #3AACED !important;
			z-index: 3;
			padding: 6px 16px;
			border-top-right-radius: 0;
			border-bottom-right-radius: 0;
			border-top-left-radius: 4px;
			border-bottom-left-radius: 4px;
			font-size: 11px;
			color: #fff;
			-webkit-transform: translate3d(0, 0, 0);
			}
			.pagination {
			display:block !important;
			}
			header#top{
			right: 0 !important;
			}
		</style>
		<section class="hero-section section-float" data-scrollax-parent="true">
			<div class="hero-parallax">
				<div class="bg" data-bg="https://iroom.ai/frontend_style/static/src/image/22.jpg" data-scrollax="properties: { translateY: '200px' }">
				</div>
				<div class="overlay op7">
				</div>
			</div>
			<div class="hero-section-wrap fl-wrap h-100 d-flex align-items-center">
				<div class="container">
					<div class="home-intro">
						<h3 class="fs-4 mb-2">
							iroom
						</h3>
						<div class="section-title-separator">
							<span>
							</span>
						</div>
						<h2>
							آيروم
							منصة التسكين التشاركي
						</h2>
						<span class="section-separator">
						</span>
						<h3 class="fs-5">
							تقنيات إدارة الوحدات الفندقية
						</h3>
					</div>
				</div>
			</div>
		</section>
    </template>
</odoo>