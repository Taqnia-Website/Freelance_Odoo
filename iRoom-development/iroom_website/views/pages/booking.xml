<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="booking">
<t t-call="website.layout">
	<t t-set="title">Booking Page | IRoom</t>
	<section class="hero-section section-float" data-scrollax-parent="true">
		<div class="hero-parallax">
			<div class="bg" data-bg="https://iroom.ai/frontend_style/static/src/image/22.jpg"
				 style="background-image: url(&quot;https://iroom.ai/frontend_style/static/src/image/22.jpg&quot;); transform: translateZ(0px) translateY(-26.6075px);"
				 data-scrollax="properties: { translateY: '200px' }">
			</div>
			<div class="overlay op7">
			</div>
		</div>
		<div class="hero-section-wrap fl-wrap h-100 d-flex align-items-center">
			<div class="container">
				<div class="home-intro">
					<h3 class="fs-4 mb-2">
						آيروم iroom
					</h3>
					<div class="section-title-separator">
						<span>
						</span>
					</div>
					<h2>
						منصة الإدارة الفندقية
					</h2>
					<span class="section-separator">
					</span>
				</div>
				<div class="main-search-input-wrap">
					<div class="main-search-input fl-wrap">
						<form action="/search_hotels/" type="post">
							<div class="main-search-input-item location" id="autocomplete-container">
								<span class="inpt_dec">
									<i class="fal fa-map-marker">
									</i>
								</span>
								<select id="hotel_select" name="hotel_select" placeholder="Hotel">
									<option/>
									<t t-foreach="all_hotels" t-as="hotel">
										<option t-att-value="hotel['id']" t-esc="hotel['name']"/>
									</t>
								</select>
								<i class="fal fa-caret-down select-i">
								</i>
							</div>
							<div class="main-search-input-item main-date-parent3 main-search-input-item_small">
								<span class="inpt_dec">
									<i class="fal fa-calendar-check">
									</i>
								</span>
								<input type="text" placeholder="فترة الحجز" name="main-input-search_slider" value="" />
								<input type="hidden" name="from_date" id="from_date" class="input-field" />
								<input type="hidden" name="to_date" id="to_date" class="input-field" />
								<i class="fal fa-caret-down select-i">
								</i>
							</div>
							<div class="main-search-input-item">
								<div class="qty-dropdown fl-wrap">
									<div class="qty-dropdown-header fl-wrap">
										<i class="fal fa-users">
										</i>
										عدد الأشخاص
									</div>
									<div class="qty-dropdown-content fl-wrap">
										<div class="quantity-item">
											<label>
												<i class="fas fa-male">
												</i>
												كبار
											</label>
											<div class="quantity">
												<input name="number_of_adults" type="number" min="1" max="30" step="1" value="1">
												</input>
											</div>
											<div class="quantity-item">
												<label>
													<i class="fas fa-child">
													</i>
													أطفال
												</label>
												<div class="quantity">
													<input name="number_of_children" type="number" min="0" max="30" step="1" value="0">
													</input>
												</div>
											</div>
										</div>
									</div>
								</div>
								<i class="fal fa-caret-down select-i">
								</i>
							</div>
							<button class="main-search-button color2-bg" type="submit" value="Check">
								بحث
								<i class="fal fa-search">
								</i>
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="grey-blue-bg section-float hotel-cnt">
		<!-- container -->
		<div class="container">
			<div class="section-title">
				<div class="section-title-separator">
					<span>
					</span>
				</div>
				<h2>
					الفنادق المتاحة
				</h2>
				<span class="section-separator">
				</span>
				<p>
					تصفح قائمة الفنادق المتاحة التي تم اختيارها بعناية لتلبية جميع احتياجاتك. احجز الآن وتمتع بتجربة إقامة
					مميزة مع أفضل
					العروض والمزايا.
				</p>
			</div>
		</div>
		<!-- container end -->
		<!-- carousel -->
		<div class="list-carousel fl-wrap card-listing ">
			<!-- listing-carousel -->
			<div class="listing-carousel  fl-wrap ">
				<!-- slick-slide-item -->
				<t t-foreach="hotels" t-as="hotel">
					<div class="slick-slide-item">
						<!-- listing-item -->
						<div class="listing-item">
							<article class="geodir-category-listing fl-wrap">
								<div class="geodir-category-img">
									<a href="javascript:void(0);">
										<img t-att-src="hotel['image_url']" t-att-alt="hotel['name']" />
									</a>
									<div class="sale-window">
										Sale 20%
									</div>
									<div class="geodir-category-opt">
										<div class="listing-rating card-popup-rainingvis" t-att-data-starrating2="int(hotel['rating_average'])">
										</div>
										<div class="rate-class-name">
											<div class="score">
												<strong t-if="hotel['rating_average'] == 5" t-esc="'جيد جدا'"/>
												<strong t-elif="hotel['rating_average'] > 4" t-esc="'جيد'"/>
												<t t-esc="hotel['rating_count']"/> تقييم
											</div>
											<span>
												<t t-esc="hotel['rating_average']"/>
											</span>
										</div>
									</div>
								</div>
								<div class="geodir-category-content fl-wrap title-sin_item">
									<div class="geodir-category-content-title fl-wrap">
										<div class="geodir-category-content-title-item">
											<h3 class="title-sin_map">
												<a t-att-href="hotel['hotel_url']" t-esc="hotel['name']"/>
											</h3>
											<div class="geodir-category-location fl-wrap">
												<a t-att-href="hotel['location']" class="map-item">
													<i class="fas fa-map-marker-alt">
													</i>
													<t t-esc="hotel['address']"/>
												</a>
											</div>
										</div>
									</div>
									<p t-esc="hotel['description']"/>
									<ul class="facilities-list fl-wrap">
										<t t-foreach="hotel['amenities']" t-as="amenity">
											<li>
												<t t-raw="amenity['icon']"/>
												<span t-esc="amenity['name']"/>
											</li>
										</t>
									</ul>
									<div class="geodir-category-footer fl-wrap">
										<div class="geodir-category-price">
											متوسط/الليلة
											<span>
												SAR <t t-esc="hotel['average_nightly_price']"/>
											</span>
										</div>
										<div class="geodir-opt-list">
											<a t-att-href="hotel['location']" target="_blank" class="single-map-item">
												<i class="fal fa-map-marker-alt">
												</i>
												<span class="geodir-opt-tooltip">
													على الخريطة
												</span>
											</a>
											<a href="#" class="geodir-js-favorite">
												<i class="fal fa-heart">
												</i>
												<span class="geodir-opt-tooltip">
													حفظ
												</span>
											</a>
											<a href="#" class="geodir-js-booking">
												<i class="fal fa-exchange">
												</i>
												<span class="geodir-opt-tooltip">
													البحث عن الاتجاه
												</span>
											</a>
										</div>
									</div>
								</div>
							</article>
						</div>
						<!-- listing-item end -->
					</div>
				</t>
			</div>
			<!-- listing-carousel end -->
			<div class="swiper-button-prev sw-btn">
				<i class="fa fa-long-arrow-right">
				</i>
			</div>
			<div class="swiper-button-next sw-btn">
				<i class="fa fa-long-arrow-left">
				</i>
			</div>
		</div>
		<!-- carousel end -->
	</section>
	<!-- section -->
	<section class="grey-blue-bg pt-5 section-float room-cnt">
		<div class="container">
			<div class="section-title">
				<div class="section-title-separator">
					<span>
					</span>
				</div>
				<h2>
					اختر غرفتك المثالية
				</h2>
				<span class="section-separator">
				</span>
				<p>
					اكتشف مجموعة متنوعة من الغرف المصممة لتوفير أقصى درجات الراحة والرفاهية. اختر غرفتك المثالية الآن واستمتع بتجربة إقامة فريدة تناسب احتياجاتك.
				</p>
			</div>
			<div class="row">
				<!-- listing -->
				<div class="col-md-12">
					<!-- col-list-wrap -->
					<div class="col-list-wrap fw-col-list-wrap">
						<!-- list-main-wrap -->
						<div class="list-main-wrap fl-wrap card-listing">
							<!-- listing-item-container -->
							<div class="listing-item-container init-grid-items fl-wrap three-columns-grid">
								<t t-foreach="rooms" t-as="room">
									<!-- listing-item -->
									<div class="listing-item">
										<article class="geodir-category-listing fl-wrap">
											<div class="geodir-category-img">
												<a href="javascript:void(0);">
													<img t-att-src="room['image_url']" t-att-alt="room['name']" />
												</a>
												<div class="sale-window">
													Sale 20%
												</div>
												<div class="geodir-category-opt">
													<div class="listing-rating card-popup-rainingvis" t-att-data-starrating2="int(room['rating_average'])">
													</div>
													<div class="rate-class-name">
														<div class="score">
															<strong t-if="room['rating_average'] == 5" t-esc="'جيد جدا'"/>
															<strong t-elif="room['rating_average'] > 4" t-esc="'جيد'"/>
															<t t-esc="room['rating_count']"/> تقييم
														</div>
														<span>
															<t t-esc="room['rating_average']"/>
														</span>
													</div>
												</div>
											</div>
											<div class="geodir-category-content fl-wrap title-sin_item">
												<div class="geodir-category-content-title fl-wrap">
													<div class="geodir-category-content-title-item">
														<h3 class="title-sin_map">
															<a t-att-href="room['hotel_url']" t-esc="room['hotel_name'] + ' - ' + room['name']"/>
														</h3>
														<div class="geodir-category-location fl-wrap">
															<a t-att-href="room['location']" class="map-item">
																<i class="fas fa-map-marker-alt">
																</i>
																<t t-esc="room['address']"/>
															</a>
														</div>
													</div>
												</div>
												<p t-esc="room['description']"/>
												<ul class="facilities-list fl-wrap">
													<t t-foreach="room['amenities']" t-as="amenity">
														<li>
															<t t-raw="amenity['icon']"/>
															<span t-esc="amenity['name']"/>
														</li>
													</t>
												</ul>
												<div class="geodir-category-footer fl-wrap">
													<div class="geodir-category-price">
														متوسط/الليلة
														<span>
															SAR <t t-esc="room['average_nightly_price']"/>
														</span>
													</div>
													<div class="geodir-opt-list">
														<a t-att-href="room['location']" target="_blank" class="single-map-item">
															<i class="fal fa-map-marker-alt">
															</i>
															<span class="geodir-opt-tooltip">
																على الخريطة
															</span>
														</a>
														<a href="#" class="geodir-js-favorite">
															<i class="fal fa-heart">
															</i>
															<span class="geodir-opt-tooltip">
																حفظ
															</span>
														</a>
														<a href="#" class="geodir-js-booking">
															<i class="fal fa-exchange">
															</i>
															<span class="geodir-opt-tooltip">
																البحث عن الاتجاه
															</span>
														</a>
													</div>
												</div>
											</div>
										</article>
									</div>
									<!-- listing-item end -->
								</t>
							</div>
							<!-- listing-item-container end -->
							<!-- pagination -->
							<div class="pagination">
								<a t-if="page > 1" t-att-href="'?page=' + str(page - 1)" class="prevposts-link">
									<i class="fa fa-caret-right"/>
								</a>
								<a t-else="" t-att-href="'?page=' + str(page)" class="prevposts-link">
									<i class="fa fa-caret-right"/>
								</a>

								<t t-foreach="range(1, number_of_pages + 1)" t-as="page_number">
									<a t-att-href="'?page=' + str(page_number)" t-attf-class="#{'current-page' if page_number == page else ''}" t-esc="page_number"/>
								</t>

								<a t-if="page &lt; number_of_pages" t-att-href="'?page=' + str(page + 1)" class="prevposts-link">
									<i class="fa fa-caret-left"/>
								</a>
								<a t-else="" t-att-href="'?page=' + str(page)" class="prevposts-link">
									<i class="fa fa-caret-left"/>
								</a>
							</div>
							<!-- pagination end -->
						</div>
						<!-- list-main-wrap end -->
					</div>
					<!-- col-list-wrap end -->
				</div>
				<!-- listing  end -->
			</div>
		</div>
	</section>
	<!-- section end -->
	<section class="parallax-section section-float" data-scrollax-parent="true">
		<div class="bg par-elem" data-bg="/frontend_style/static/src/image/contact-bg.jpg" data-scrollax="properties: { translateY: '30%' }">
		</div>
		<div class="overlay">
		</div>
		<div class="container">
			<div class="intro-item fl-wrap">
				<div class="section-title-separator">
					<span>
					</span>
				</div>
				<h2>
					تواصل معنا
				</h2>
				<h3>
					نحن فريق من الخبراء المتخصصين في مجال الفنادق والسياحة، نؤمن بقوة التكنولوجيا في تحويل هذه الصناعة، ونعمل بلا كلل لتقديم حلول مبتكرة تلبي احتياجات عملائنا المتطورة.
				</h3>
				<a class="btn btn-hdi color-bg" href="/contactus">
					تواصل الآن
					<i class="fal fa-envelope">
					</i>
				</a>
			</div>
		</div>
	</section>
</t>
</template>
</odoo>
