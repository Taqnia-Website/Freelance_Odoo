<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="iroom_custom_view_hotel_folio1_form" model="ir.ui.view">
            <field name="name">iroom_custom_view_hotel_folio1_form</field>
            <field name="model">hotel.folio</field>
            <field name="inherit_id" ref="hotel.view_hotel_folio1_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='service_line']//field[@name='product_id']" position="before">
                    <field name="service_date" required="1" readonly="folio_state in ['check_out', 'done', 'cancel']"/>
                </xpath>
                <xpath expr="//page[@name='service_line']//field[@name='product_uom']" position="after">
                    <field name="service_product_ids" widget="many2many_tags" invisible="1"/>
                    <field name="service_product_id" readonly="folio_state in ['check_out', 'done', 'cancel']"/>
                </xpath>
                <xpath expr="//page[@name='service_line']//field[@name='price_unit']" position="after">
                    <field name="price_subtotal"/>
                </xpath>
                <xpath expr="//field[@name='service_lines']/tree/field[@name='name']" position="after">
                    <field name="service_product_id"/>
                </xpath>
                <xpath expr="//field[@name='service_lines']/tree/field[@name='state']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='laundry_line_ids']/tree/field[@name='state']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='transport_line_ids']/tree/field[@name='state']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='food_lines']/tree/field[@name='state']" position="attributes">
                    <attribute name="column_invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>