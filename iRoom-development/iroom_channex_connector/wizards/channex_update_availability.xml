<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="channex_update_availability_view_form" model="ir.ui.view">
            <field name="name">channex_update_availability_view_form</field>
            <field name="model">channex.update.availability</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="property_id"/>
                        </group>
                        <notebook>
                            <page name="lines" string="Lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="room_type_id"/>
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                        <field name="availability"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="notes" string="Notes">
                                <group>
                                    <field name="channex_notes"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_update_availability" type="object" string="Update Availability" class="oe_highlight"/>
                        <button special="cancel" type="object" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="channex_update_availability_action" model="ir.actions.act_window">
            <field name="name">Update Availability</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">channex.update.availability</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
<!--        <menuitem id="channex_update_availability_menu" name="Update Availability" parent="iroom_channex_connector.channex_menu"-->
<!--                  action="channex_update_availability_action" sequence="2"/>-->
    </data>
</odoo>