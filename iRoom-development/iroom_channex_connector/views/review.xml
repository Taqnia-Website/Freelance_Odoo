<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="channex_review_view_tree" model="ir.ui.view">
            <field name="name">channex_review_view_tree</field>
            <field name="model">channex.review</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="guest_name"/>
                    <field name="ota"/>
                    <field name="ota_reservation_id"/>
                    <field name="overall_score"/>
                </tree>
            </field>
        </record>
        <record id="channex_review_view_form" model="ir.ui.view">
            <field name="name">channex_review_view_form</field>
            <field name="model">channex.review</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="guest_name"/>
                            <field name="ota"/>
                            <field name="ota_reservation_id"/>
                            <field name="overall_score"/>
                            <field name="is_hidden"/>
                            <field name="is_replied"/>
                        </group>
                        <notebook>
                            <page name="score" string="Scores">
                                <field name="score_ids">
                                    <tree editable="bottom">
                                        <field name="category_id"/>
                                        <field name="score"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="channex_review_action" model="ir.actions.act_window">
            <field name="name">Channel Reviews</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">channex.review</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="channex_review_menu" name="Channel Reviews" action="channex_review_action" sequence="55"/>
    </data>
</odoo>