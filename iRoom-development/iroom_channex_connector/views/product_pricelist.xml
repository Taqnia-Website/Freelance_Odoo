<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="channex_product_pricelist_view" model="ir.ui.view">
            <field name="name">channex_product_pricelist_view</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="channex" string="Channex" invisible="not apply_channex">
                        <group>
                            <group>
                                <field name="apply_channex"/>
                                <field name="shop_id"/>
                                <field name="room_type_id"/>
                                <field name="category_id"/>
                                <field name="fixed_price"/>
                            </group>
                            <group>
                                <field name="channex_id"/>
                                <field name="meal_type"/>
                                <field name="children_fee"/>
                                <field name="infant_fee"/>
                                <field name="channex_notes"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="button_create_channex_rate_plan" type="object" string="Channex Sync" class="oe_highlight"
                                invisible="not apply_channex or not shop_id or not room_type_id or not category_id or not fixed_price"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='item_ids']/tree[last()]" position="inside">
                    <button name="button_update_restrictions" type="object" string="Update Restrictions" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>