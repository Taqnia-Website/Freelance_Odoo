			<div class="row">
				<div class="col-md-3 mt-3">
					<div class="row">
						<!-- My Company Element -->
						<div class="col-md-12 hotel mb-3" style="font-weight: bold; display: flex; justify-content: center; align-items: center;">
							<select class="form-select form-select-lg bg-white text-primary text-center border-primary mr8" id="shops">
								<option value="1">
									My Company
								</option>
							</select>
							<button id="dashboard_reload" class="btn btn-primary btn-lg" t-on-click="reload">
								<span class="fa fa-refresh">
								</span>
							</button>
						</div>
						<!-- Side 1: Vertical Booking Information -->
						<div class="col-md-12 mb-3">
							<div class="card booking mb-3">
								<div class="card-body">
									<div class="booking-status d-flex align-items-center">
										<span class="span-icon span-icon-door-open">
											<!--<i class="fa fa-sign-in" style="color: rgba(13,110,253);">
											</i>-->
										</span>
										<div class="ms-4">
											<h2 class="mb-2 font-w600 fs-1" id="check_in">
												<div class="spinner-border spinner-border-sm">
												</div>
											</h2>
											<p class="mb-0 text-nowrap">
												طلبات تسجيل الوصول
											</p>
										</div>
									</div>
								</div>
							</div>
							<div class="card booking mb-3">
								<div class="card-body">
