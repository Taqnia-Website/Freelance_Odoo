<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
    <record id="rules_for_sale_shop_public_access" model="ir.rule">
            <field name="name">Mutli-Company Hotels Public Access Rules</field>
            <field name="model_id" ref="hotel.model_sale_shop"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','in',company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_create" eval="1"/>
    </record>

    <record id="hotel_management.rules_for_sale_shop" model="ir.rule">
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</data>
</odoo>