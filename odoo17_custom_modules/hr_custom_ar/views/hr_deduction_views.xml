<odoo>
    <record id="view_hr_deduction_tree" model="ir.ui.view">
        <field name="name">hr.deduction.tree</field>
        <field name="model">hr.deduction</field>
        <field name="arch" type="xml">
            <tree string="الخصومات" default_order="date desc">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="amount"/>
                <field name="reason"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_deduction_form" model="ir.ui.view">
        <field name="name">hr.deduction.form</field>
        <field name="model">hr.deduction</field>
        <field name="arch" type="xml">
            <form string="خصم">
                <header>
                    <button name="action_approve" type="object" string="اعتماد"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved"/>
                </header>

                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="employee_id"/>
                        <field name="department_id" readonly="1"/>
                        <field name="amount"/>
                        <field name="reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_hr_deduction_pivot" model="ir.ui.view">
        <field name="name">hr.deduction.pivot</field>
        <field name="model">hr.deduction</field>
        <field name="arch" type="xml">
            <pivot string="تحليل الخصومات">
                <field name="employee_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_hr_deduction_graph" model="ir.ui.view">
        <field name="name">hr.deduction.graph</field>
        <field name="model">hr.deduction</field>
        <field name="arch" type="xml">
            <graph string="رسم بياني للخصومات" type="line">
                <field name="date" interval="month"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_hr_deduction" model="ir.actions.act_window">
        <field name="name">الخصومات</field>
        <field name="res_model">hr.deduction</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>
</odoo>