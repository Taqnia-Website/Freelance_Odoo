<odoo>
    <record id="view_hr_payroll_sheet_tree" model="ir.ui.view">
        <field name="name">hr.payroll.sheet.tree</field>
        <field name="model">hr.payroll.sheet</field>
        <field name="arch" type="xml">
            <tree string="كشف الرواتب" default_order="date desc">
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_hr_payroll_sheet_form" model="ir.ui.view">
        <field name="name">hr.payroll.sheet.form</field>
        <field name="model">hr.payroll.sheet</field>
        <field name="arch" type="xml">
            <form string="كشف الرواتب">
                <sheet>
                    <header>
                        <button name="action_compute" type="object" string="احتساب" invisible="state != 'draft'"/>
                        <button name="action_done" type="object" string="اعتماد" invisible="state != 'draft'"/>

                        <!-- اطبع PDF عبر ميثود بايثون -->
                        <button type="object" name="action_print_pdf" string="PDF" class="btn-secondary"/>

                        <!-- صدّر Excel عبر ميثود بايثون ترجع act_url -->
                        <button type="object" name="action_export_xlsx" string="Excel" class="btn-secondary"/>
                    </header>

                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="الأسطر">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="basic_salary"/>
                                    <field name="loan_total"/>
                                    <field name="deduction_total"/>
                                    <field name="overtime_total"/>
                                    <field name="net_salary" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_hr_payroll_sheet" model="ir.actions.act_window">
        <field name="name">كشف الرواتب</field>
        <field name="res_model">hr.payroll.sheet</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- URL Action for Excel -->
    <record id="action_hr_payroll_sheet_xlsx_url" model="ir.actions.act_url">
        <field name="name">Excel</field>
        <field name="url">/hr_custom_ar/payroll_sheet/xlsx/%(id)d</field>
        <field name="target">self</field>
    </record>
</odoo>