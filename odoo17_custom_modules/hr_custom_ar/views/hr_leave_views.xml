<odoo>

    <!-- List / Tree -->
    <record id="view_hr_leave_tree" model="ir.ui.view">
        <field name="name">hr.leave.custom.tree</field>
        <field name="model">hr.leave.custom</field>
        <field name="arch" type="xml">
            <tree string="الإجازات" default_order="date desc">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hr_leave_form" model="ir.ui.view">
        <field name="name">hr.leave.custom.form</field>
        <field name="model">hr.leave.custom</field>
        <field name="arch" type="xml">
            <form string="إجازة">
                <header>
                    <button name="action_approve" type="object" string="اعتماد"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_return" type="object" string="مباشرة عمل"
                            class="btn-secondary" invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,returned"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="employee_id"/>
                        <field name="department_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar (المهم): تحديد date_start/date_stop صراحة -->
    <record id="view_hr_leave_calendar" model="ir.ui.view">
        <field name="name">hr.leave.custom.calendar</field>
        <field name="model">hr.leave.custom</field>
        <field name="arch" type="xml">
            <calendar string="الإجازات" date_start="date_from" date_stop="date_to" color="employee_id">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
            </calendar>
        </field>
    </record>

    <!-- Graph (اختياري) -->
    <record id="view_hr_leave_graph" model="ir.ui.view">
        <field name="name">hr.leave.custom.graph</field>
        <field name="model">hr.leave.custom</field>
        <field name="arch" type="xml">
            <graph string="تحليل الإجازات" type="bar" stacked="True">
                <field name="employee_id"/>
                <!-- القياس الافتراضي = count -->
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_leave" model="ir.actions.act_window">
        <field name="name">الإجازات</field>
        <field name="res_model">hr.leave.custom</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="context">{'search_default_groupby_employee_id': 1}</field>
    </record>


</odoo>
