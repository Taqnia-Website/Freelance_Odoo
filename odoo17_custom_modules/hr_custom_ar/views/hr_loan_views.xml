<odoo>
    <!-- Tree View -->
    <record id="view_hr_loan_tree" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree string="السلف" default_order="date desc">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="amount"/>
                <field name="months"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_loan_form" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form string="سلفة">
                <header>
                    <button name="action_approve" type="object" string="اعتماد" 
                            class="btn-primary" 
                            invisible="state != 'draft'"/>
                    <button name="action_post_account" type="object" string="قيد محاسبي" 
                            class="btn-secondary" 
                            invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,paid"/>
                </header>
                
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="date"/>
                        <field name="employee_id"/>
                        <field name="department_id" readonly="1"/>
                        <field name="amount"/>
                        <field name="months"/>
                        <field name="reason"/>
                        <field name="journal_id"/>
                        <field name="move_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_loan" model="ir.actions.act_window">
        <field name="name">السلف</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>
</odoo>
