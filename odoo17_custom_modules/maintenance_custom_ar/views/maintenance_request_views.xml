<odoo>
    <record id="view_maintenance_req_tree" model="ir.ui.view">
        <field name="name">maintenance.request.custom.tree</field>
        <field name="model">maintenance.request.custom</field>
        <field name="arch" type="xml">
            <tree string="طلبات الصيانة" default_order="date desc">
                <field name="name"/>
                <field name="date"/>
                <field name="vehicle_name"/>
                <field name="vehicle_type"/>
                <field name="driver_name"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_maintenance_req_form" model="ir.ui.view">
        <field name="name">maintenance.request.custom.form</field>
        <field name="model">maintenance.request.custom</field>
        <field name="arch" type="xml">
            <form string="طلب صيانة">
                <header>
                    <button name="action_confirm" type="object" string="تأكيد"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_done" type="object" string="تنفيذ وخصم من المخزون"
                            class="btn-primary"
                            invisible="state != 'confirmed'"/>
                    <button name="action_create_bill" type="object" string="تحويل لفاتورة مشتريات"
                            class="btn-secondary"
                            invisible="state not in ('confirmed','done')"/>
                    <button type="object" name="action_print_pdf" string="PDF"
                            class="btn-secondary"/>
                    <button type="object" name="action_export_xlsx" string="Excel"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>

                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="user_id"/>
                        <field name="date"/>
                        <field name="vehicle_name"/>
                        <field name="vehicle_type"/>
                        <field name="driver_name"/>
                        <field name="picking_id" readonly="1"/>
                        <field name="bill_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="قطع الغيار المطلوبة">
                            <field name="part_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_maintenance_requests" model="ir.actions.act_window">
        <field name="name">طلبات الصيانة</field>
        <field name="res_model">maintenance.request.custom</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>
</odoo>